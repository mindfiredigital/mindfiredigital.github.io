{
  "name": "mf-open-source",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "update-all": "node updateScript/updateProject.mjs && node updateScript/updatePackages.mjs && node updateScript/make-cache.mjs && node updateScript/make-leaderboard.mjs && node updateScript/make-periodic-table.mjs",
    "build": "npm run update-all && next build && touch ./build/.nojekyll",
    "start": "next start",
    "lint": "next lint",
    "start:build": "serve ./build",
    "prepare": "husky install",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "npx prettier --check .",
    "format": "npx prettier --write .",
    "check-lint": "eslint . --ext ts --ext tsx --ext js",
    "pre-commit": "npm run check-format && npm run check-lint && npm run check-types",
    "update-projects": "node updateScript/updateProject.mjs",
    "pypi-check": "node pypiTotalStats.mjs"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "clsx": "^2.0.0",
    "i": "^0.3.7",
    "lucide-react": "^0.563.0",
    "moment": "^2.30.1",
    "next": "13.5.4",
    "npm": "^10.2.0",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.5.0",
    "react-markdown": "^9.0.0",
    "react-type-animation": "^3.2.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-html": "^16.0.1",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "autoprefixer": "^10",
    "eslint": "^8.55.0",
    "eslint-config-next": "13.5.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.0",
    "motion": "^12.6.3",
    "postcss": "^8",
    "prettier": "^3.1.1",
    "serve": "^14.2.1",
    "tailwindcss": "^3",
    "typescript": "^5"
  },
  "release": {
    "repositoryUrl": "https://github.com/mindfiredigital/mindfiredigital.github.io.git",
    "branches": [
      "main"
    ]
  }
}
